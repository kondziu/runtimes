use std::str::FromStr;
use crate::fml_ast::AST;

grammar;

pub Expression: AST<'input> = {
   Number                               => <>,
   Identifier                           => <>,
}

Identifier: AST<'input> = {
     r"[_A-Za-z][_A-Za-z0-9]*"          => AST::Identifier(<>),
     "this"                             => AST::Identifier(<>),
}

Number: AST<'input> = {
    r"[-]?[0-9]+"                       => AST::Number(i32::from_str(<>).unwrap()),
}
